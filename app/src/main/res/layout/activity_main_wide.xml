<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="wecan.com.todo.MainActivity">

    <fragment
        android:id="@+id/frag_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="wecan.com.todo.FragmentListToDos"
        tools:layout="@layout/frag_list_todo"/>

    <fragment
        android:id="@+id/frag_add"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="wecan.com.todo.AddTodoFragment"
        tools:layout="@layout/frag_add_todo"/>

</LinearLayout>